<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_weight="0.3">


                <TextView
                    android:id="@+id/t_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid to"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prasoon Goswami"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/t_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For iphoneX"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/t_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tranascation id: 884568dwwd"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:textSize="11sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_weight="0.7">


                <TextView
                    android:id="@+id/t_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 500"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="13 Mar 2019"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/t_wallet_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:text="Credited to"
                    android:drawableRight="@drawable/ic_wallet_black"
                    android:drawablePadding="4dp"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>